<!DOCTYPE html>
<html>
  <head>
    <title>PamelasPanel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great|Open+Sans" rel="stylesheet">
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <span class="navbar-brand logo nav-link"><%= link_to "Pamela's Panel", root_path %></span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <span class="nav-link"><%= link_to 'Home', root_path %></span>
                </li>
                <li class="nav-item">
                  <span class="nav-link"><%= link_to 'Students', students_path %></span>
                </li>
                <li class="nav-item">
                  <span class="nav-link"><%= link_to 'Instructors', instructors_path %></span>
                </li>
                <li class="nav-item">
                  <span class="nav-link"><%= link_to 'Courses', courses_path %></span>
                </li>
                <li class="nav-item">
                  <span class="nav-link"><%= link_to 'Cohorts', cohorts_path %></span>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle"href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Cohort Management
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <span class="nav-link dropdown-item"><%= link_to 'Manage Cohort Instructors', cohorts_instructors_path %></span>
                    <span class="nav-link dropdown-item"><%= link_to 'Manage Cohort Students', cohorts_students_path %></span>
                  </div>
                </li>
                <li class="nav-item">
                  <% if user_signed_in? %>
                    <span class="nav-link"><%= link_to 'Account Settings', edit_user_registration_path %></span>
                  </li>
                  <li class="nav-item">
                    <span class="nav-link"><%= link_to 'Log Out', destroy_user_session_path, method: :DELETE %></span>
                  </li>
                    <% else %>
                  <li class="nav-item">
                    <span class="nav-link"><%= link_to 'Log In', new_user_session_path %></span>
                  <% end %>
                </li>
              </ul>
            </div>
          </nav>

        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <%= custom_bootstrap_flash %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
