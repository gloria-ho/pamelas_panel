<h3>Courses</h3>

<p>This is where you can create, display, edit, and remove Courses</p>

<div>
  <%= link_to 'Add New Course', new_course_path %>
</div>
<br>

<div>
  <% if @courses!=[] %>

      <table class="table table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id #</th>
            <th scope="col">Name</th>
            <th scope="col">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
          <tr class="course-div">
            <th scope="row"><%= course.id%></th>
            <td><%= course.name %></td>
            <td class="links">
              <%= link_to 'View', course_path(course) %>
              <%= link_to 'Edit', edit_course_path(course) %>
              <%= link_to 'Delete', course, class: 'delete-course' %>
            </td>
          </tr>
          <% end %> 
        </tbody>
      </table>

  <% end %>
</div>