<h3>Cohort Students</h3>

<p>This is where you can create, display, edit, and remove Cohort Students</p>

<div class="main-img-div auto-margin">
  <%= image_tag image_path('study.jpg'), alt: 'study image' %>
</div>

<div class="content">
  <br />
  <%= link_to "Assign New Cohort Student", new_cohorts_student_path, 'class': 'btn btn-outline-secondary btn-lg btn-block' %>

  <br />

  <% if @cohorts_students!=[] %>

    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Cohort</th>
          <th scope="col">Student</th>
          <th scope="col">Registered</th>
          <th scope="col">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @cohorts_students.each do |cohort_student| %>
        <tr class="cohort-student-div">
          <td><%= cohort_student.cohort.name %></td>
          <td><%= cohort_student.student.f_name %> <%= cohort_student.student.l_name %></td>
          <td><%= cohort_student.created_at.strftime("%Y-%m-%d")%></td>
          <td class="links">
            <%= link_to "View Cohort",  cohort_path(cohort_student.cohort.id) %>
            <%= link_to "Edit", edit_cohorts_student_path(cohort_student) %>
            <%= link_to "Unregister", cohort_student, class: "delete-cohort-student" %>
          </td>
        </tr>
        <% end %> 
      </tbody>
    </table>

  <% end %>

</div>