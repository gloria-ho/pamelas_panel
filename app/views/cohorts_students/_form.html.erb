<%= form_for @cohorts_student do |f| %>

  <div>
    <% f.label :cohort %>Cohort: 
    <%= f.select :cohort_id, options_for_select(@cohorts, @cohorts_student.cohort_id) %>
  </div>

  <div>
    <% f.label :student %>Student: 
    <%= f.select :student_id, options_for_select(@students, @cohorts_student.student_id) %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>