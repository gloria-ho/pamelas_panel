<h3>Cohorts</h3>

<p>This is where you can create, display, edit, and remove Cohorts</p>

<div>
  <%= link_to 'Add New Cohort', new_cohort_path %>
</div>
<br>

<div>
  <% if @cohorts!=[] %>

    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Id #</th>
          <th scope="col">Name</th>
          <th scope="col">Created</th>
          <th scope="col">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @cohorts.each do |cohort| %>
        <tr class="cohort-div">
          <th scope="row"><%= cohort.id%></th>
          <td><%= cohort.name %></td>
          <td><%= cohort.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td class="links">
            <%= link_to 'View', cohort_path(cohort) %>
            <%= link_to 'Edit', edit_cohort_path(cohort) %>
            <%= link_to 'Delete', cohort, class: 'delete-cohort' %>
          </td>
        </tr>
        <% end %> 
      </tbody>
    </table>
    
  <% end %>
</div>