<h3>Students</h3>

<p>This is where you can create, display, edit, and remove Students</p>

<div class="main-img-div auto-margin">
  <%= image_tag image_path('students.jpg'), alt: 'students image' %>
</div>

<div class="content">
  <br />
  <%= link_to 'Add New Student', new_student_path, 'class': 'btn btn-outline-secondary btn-lg btn-block' %>

  <br>

  <% if @students!=[] %>

      <table class="table table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id #</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
          <tr class="student-div">
            <th scope="row"><%= student.id%></th>
            <td><%= student.f_name %></td>
            <td><%= student.l_name %></td>
            <td class="links">
              <%= link_to 'View', student_path(student) %>
              <%= link_to 'Edit', edit_student_path(student) %>
              <%= link_to 'Delete', student, class: 'delete-student' %>
            </td>
          </tr>
          <% end %> 
        </tbody>
      </table>

  <% end %>
</div>