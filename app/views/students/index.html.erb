<h3>Students</h3>

<p>This is where you can create, display, edit, and remove students</p>

<p>Make me pretty</p>

<div>
  <%= link_to 'Add New Student', new_student_path %>
</div>
<br>

<div>
  <% if @students!=[] %>

    <% @students.each do |student| %>
      <div>
        Name: <%= student.f_name %> <%= student.l_name %>
      </div>
      <div>
        <%= link_to 'View', student_path(student) %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Delete', student_path(student), 'data-method': 'DELETE', 'data': { confirm: 'Are you sure?' } %>
      </div>
      <br>
    <% end %> 

  <% end %>
</div>