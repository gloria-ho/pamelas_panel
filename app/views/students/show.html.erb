<h3>Student Details:</h3>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Id #</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Birthday</th>
      <th scope="col">Education</th>
      <th scope="col">Registered</th>
      <th scope="col">Last Updated</th>
      <th scope="col">Options</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row"><%= @student.id%></th>
      <td><%= @student.f_name %></td>
      <td><%= @student.l_name %></td>
      <td><%= @student.birthday.strftime('%Y-%m-%d') %></td>
      <td><%= @student.education %></td>
      <td><%= @student.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= @student.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td class="links">
        <%= link_to 'Edit', edit_student_path(@student) %>
      </td>
    </tr>
  </tbody>
</table>

<br>
<div  class="links">
  <%= link_to 'Back', students_path, 'class': 'btn btn-outline-secondary btn-lg btn-block' %>
</div>